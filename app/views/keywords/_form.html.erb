<%= form_with(model: keyword, local: true, multipart: true) do |form| %>
  <% if keyword.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(keyword.errors.count, "error") %> prohibited this keyword from being saved:</h2>

      <ul>
      <% keyword.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :word %>
    <%= form.text_field :word %>
  </div>
  <div class="field">
    <%= image_tag(@keyword.image_url, width: '100') if @keyword.image? %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>

  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
